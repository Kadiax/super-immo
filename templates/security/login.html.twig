{% extends 'base.html.twig' %}

{% block title 'Se connecter' %}

{% block body %}
<div id="login-page">
	<div class="container mt-4">
		{% if error %}
		<div class="alert alert-danger">
			{{ error.messageKey | trans(error.messagedata, 'security') }}
		</div>
		{% endif %}

		<form class="form-login" action="{{ path('login') }}" method="post">
			<h2 class="form-login-heading">Connexion</h2>
			<div class="login-wrap">
				<div class="form-group">
					<label for="username">Nom d'utilisateur</label> <input type="text"
						id="username" name="_username" class="form-control"
						value="{{ last_username }}">
				</div>

				<div class="form-group">
					<label for="password">Mot de passe</label> <input type="password"
						id="password" name="_password" placeholder="Mot de passe"
						class="form-control">
				</div>
				<br>
				<button type="submit" class="btn btn-theme btn-block">
					<i class="fa fa-lock"></i> Se connecter
				</button>
			</div>
		</form>
	</div>
</div>
{% endblock %}
{% block javascripts %}
<script>
	$.backstretch("img/bg-login.jpg", {
		speed : 500
	});
</script>
{% endblock %}