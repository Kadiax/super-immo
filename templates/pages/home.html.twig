{% extends 'base.html.twig' %}

{% block title 'Super-Immo' %}

{% block body %}
	<div class="jumbotron text-center">
		<h1>Agence Super-Immo</h1>
		<p>Super-Immo, pour votre recherche immobiliere</p>
	</div>
	
	<div class="container">
	<h2>Les derniers biens</h2>
	<div class="row flex">
		{% for property in properties %}
			<div class="col-3 mt-4">
				<div class="card">
					<div class="card-body">
						<h6 class="card-title">
							<a href="{{ path('property.show', {id: property.id, slug: property.slug}) }}"> {{ property.title }}</a>
						</h6>
						<p class="card-text">{{ property.city }} {{ property.postalCode }} </p>
						<div class="text-primary" style="font-weight: bold; font-size: 1rem"> {{ property.formatedPrice }} â‚¬</div>
					</div>
				</div>
			</div>
			{% endfor %}
	</div>
	</div>
{% endblock %}